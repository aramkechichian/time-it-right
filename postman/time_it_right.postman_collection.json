{
  "info": {
    "name": "Time It Right - Auth API",
    "_postman_id": "auth-collection-1234",
    "description": "Colecci√≥n para testear registro, login y usuario autenticado.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"aram\",\n  \"email\": \"aram@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["auth", "register"]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username_or_email\": \"aram\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["auth", "login"]
        }
      }
    },
    {
      "name": "Get Current User",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:8000/users/me",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["users", "me"]
        }
      }
    },
{
  "name": "Get Leaderboard",
  "request": {
    "method": "GET",
    "header": [],
    "url": {
      "raw": "http://localhost:8000/games/leaderboard?page=1&limit=10",
      "protocol": "http",
      "host": ["localhost"],
      "port": "8000",
      "path": ["games", "leaderboard"],
      "query": [
        { "key": "page", "value": "1" },
        { "key": "limit", "value": "10" }
      ]
    }
  }
},
{
  "name": "Get User Analytics",
  "request": {
    "method": "GET",
    "header": [
      { "key": "Authorization", "value": "Bearer {{token}}" }
    ],
    "url": {
      "raw": "http://localhost:8000/games/analytics/{{user_id}}",
      "protocol": "http",
      "host": ["localhost"],
      "port": "8000",
      "path": ["games", "analytics", "{{user_id}}"]
    }
  }
},
{
      "name": "Start Game",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/games/start",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["games", "start"]
        }
      }
    },
    {
      "name": "Stop Game",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/games/{{session_id}}/stop",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["games", "{{session_id}}", "stop"]
        }
      }
    }    
  ]
}
